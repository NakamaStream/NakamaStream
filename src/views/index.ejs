    <script>
        $(document).ready(function () {
        function loadRecentAnimes() {
            $.ajax({
                url: '/api/recent-animes',
                method: 'GET',
                success: function (data) {
                    const animesContainer = $('#recent-animes');
                    animesContainer.empty();

                    data.forEach(anime => {
                        const animeElement = `
                        <div class="nakama-card">
                            <img src="${anime.imageUrl}" alt="${anime.name}">
                            <span class="nakama-tag">Nuevo</span>
                            <div class="nakama-title">${anime.name}</div>
                            <div class="nakama-description">${anime.description || 'Descripción no disponible'}</div>
                        </div>
                        `;
                        animesContainer.append(animeElement);
                    });
                },
                error: function (err) {
                    console.error('Error loading recent animes:', err);
                }
            });
        }

        loadRecentAnimes();
    });
    </script>
